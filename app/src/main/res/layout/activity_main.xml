<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9FBFD">

    <!-- 캐릭터 이미지 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:src="@drawable/logo" />

    <!-- 인삿말 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반가워요 :)"
        android:textSize="32sp"
        android:fontFamily="@font/jua"
        android:textColor="#FF000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp" />

    <!-- 카카오 로그인 버튼 -->
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="카카오톡으로 로그인"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/loginbtn_color"
        android:padding="12dp"
        android:layout_marginBottom="190dp"
        android:elevation="3dp"
        android:layout_gravity="bottom|center" />

    <!-- 구글 로그인 버튼 -->
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="구글로 로그인"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="120dp"
        android:elevation="3dp"
        android:layout_gravity="bottom|center" />

    <!-- 애플 로그인 버튼 -->
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="애플로 로그인"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/setnamebtn_color"
        android:padding="12dp"
        android:layout_marginBottom="50dp"
        android:elevation="3dp"
        android:layout_gravity="bottom|center" />

    <!-- 카카오 아이콘 -->
    <ImageView
        android:id="@+id/kakaoIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/kako2"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="190dp"
        android:layout_marginRight="95dp"
        android:elevation="24dp" />

</FrameLayout>
